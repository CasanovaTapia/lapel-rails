<h2 class="text-center">Edit Appointment</h2>
<div class="container">
  <div class="row">
    <%= form_for [@user, @appointment] do |f| %>
      <div class="col-md-4 col-md-offset-4">
        <div class="form-group">
          <%= f.datetime_select :datetime, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :location, placeholder: 'Location', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :status, placeholder: 'Status', class: 'form-control' %>
        </div>

				<div class="form-group">
					<%= f.text_area :notes, placeholder: 'Notes', class: 'form-control' %>
				</div>

        <div class="form-group">
          <%= f.submit "Send", class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
