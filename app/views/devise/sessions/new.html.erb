<div class="login-block text-center">
   <h2>LOGIN</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="login-form col-md-4 col-md-offset-4">
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: 'form-control text-center', placeholder: 'EMAIL' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control text-center', placeholder: 'PASSWORD' %>
      </div>

      <div class="form-group">
        <%= f.submit "LOGIN", class: 'btn btn-login' %>
      </div>
    </div>
  <% end %>

  <div class="back_btn text-center col-md-2 col-md-offset-5">
     <%= link_to "BACK", root_path %>
  </div>

</div>
