<% if current_user.liaison? %>
<div class="row">
   <div class="sidebar">
     <%= render "internal/internalside" %>
   </div>
   <div class="content" id="content">
     <h3 class="text-center">INVENTORY</h3>
     <div class="inventory">
       <div class="row">
         <div class="item_list col-md-10">
           <% if @items.length > 0 %>
              <% @items.each do |item| %>
               <%= link_to item do %>
                 <div class="item col-md-4 text-left">
                    <div class="item_inlay row">
                       <div class="col-md-6">
                         <% if item.avatar? %>
                             <%= image_tag( item.avatar.url, class: "img-item" ) %>
                         <% else %>
                             <%= image_tag('box.png', class: "img-circle img-item") %>
                         <% end %>
                       </div>
                       <small class="col-md-6">
                         <h5><%= item.brand %></h5><br/>
                         <h6><%= item.name %><br/>
                         <%= "$#{item.price}" %></h6>
                       </small>
                    </div>
                 </div>
               <% end %>
             <% end %>
           <% else %>
              <h3>There are no items currently in stock.</h3>
           <% end %>
         </div>
       </div>
     </div>
   </div>
</div>
<% else %>
<div class="row">
   <%= render "client/navbar" %>
   <div class="client-content text-center">
     <h5>Unauthorized action</h5>
     <%= link_to "BACK", :back %>
   </div>
</div>
<% end %>
