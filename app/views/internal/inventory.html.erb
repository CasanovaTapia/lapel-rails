<% if current_user.liaison? %>
<div class="sidebar">
  <%= render "internal/internalside" %>
</div>
<div class="content" id="content">
  <h3 class="text-center">INVENTORY</h3>
  <div class="inventory">
    <div class="row">
      <div class="item_list row">
        <% if @items.length > 0 %>
           <% @items.each do |item| %>
              <div class="item col-md-3 text-center">
                 <%= link_to image_tag('box.png', class: "img-circle img-item"), item %>
                 <h5><%= item.name %></h5>
                 <p>$<%= item.price %>
              </div>
            <% end %>
        <% else %>
           <h3>There are no items currently in stock.</h3>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
