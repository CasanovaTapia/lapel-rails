<% if current_user.liaison? %>
<div class="sidebar">
  <%= render "internal/internalside" %>
</div>
<div class="content" id="content">
  <h3 class="text-center">INVENTORY</h3>
  <div class="inventory">
    <div class="row">
      <div class="item_list col-md-10">
        <% if @items.length > 0 %>
           <% @items.each do |item| %>
              <div class="item col-md-3 text-left">
                 <div class="item_inlay row">
                    <div class="col-md-3">
                       <%= link_to image_tag('box.png', class: "img-circle img-item"), item %>
                    </div>
                    <h6 class="col-md-9"><%=link_to "#{item.name}", item, class: "item-name-link" %><small>$<%= item.price %></small></h6>
                 </div>
              </div>
            <% end %>
        <% else %>
           <h3>There are no items currently in stock.</h3>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% else %>
  <%= render "client/navbar" %>
  <div class="client-content text-center">
    <h5>Unauthorized action</h5>
    <%= link_to "BACK", :back %>
  </div>
<% end %>
