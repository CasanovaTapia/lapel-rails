<div class="row">
   <% if current_user.client? %>
     <%= render "client/navbar" %>
     <div class="client-content" style="margin-top:15vh;">
       <div id="item-card">
          <div class="image-panel text-center">
             <% if @item.avatar? %>
             <%= image_tag( @item.avatar.url, height: "300" ) %>
            <% else %>
               <%= link_to image_tag('box.png', class: "img-circle img-item"), @item %>
            <% end %>
          </div>
          <div class="specs-panel text-left">
             <h5><%= "MODEL: #{@item.name}" %></h5>
             <h5><%= "BRAND: #{@item.brand}" %></h5>
             <h6><%= "PRICE: $#{@item.price}" %></h6>
             <h6 id="desc"><%= "DESCRIPTION:" %></h6>
             <h6><%= "#{@item.desc}" %></h6>

             <% if current_user.liaison? %>
                 <h6 class="text-right"><%= link_to "edit", edit_item_path(@item) %></h6>
             <% end %>
          </div>
       </div>
     </div>
   <% elsif current_user.liaison? %>
   <div class="sidebar">
      <%= render "internal/internalside" %>
   </div>
   <div class="client-content">
     <div id="item-card">
        <div class="image-panel text-center">
           <% if @item.avatar? %>
           <%= image_tag( @item.avatar.url, height: "300" ) %>
          <% else %>
             <%= link_to image_tag('box.png', class: "img-circle img-item"), @item %>
          <% end %>
        </div>
        <div class="specs-panel text-left">
           <h5><%= "MODEL: #{@item.name}" %></h5>
           <h5><%= "BRAND: #{@item.brand}" %></h5>
           <h6><%= "PRICE: $#{@item.price}" %></h6>
           <h6 id="desc"><%= "DESCRIPTION:" %></h6>
           <h6><%= "#{@item.desc}" %></h6>

           <% if current_user.liaison? %>
               <h6 class="text-right"><%= link_to "edit", edit_item_path(@item) %></h6>
           <% end %>
        </div>
     </div>
   </div>
   <% end %>
</div>
