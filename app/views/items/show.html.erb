<% if current_user.client? %>
  <%= render "client/navbar" %>
<% elsif current_user.liaison? %>
<div class="sidebar">
   <%= render "internal/internalside" %>
</div>
<% end %>
<div class="client-content">
  <div class="text-center">
        <% if @item.avatar? %>
          <%= image_tag( @item.avatar.url ) %>
        <% else %>
      	  <%= link_to image_tag('box.png', class: "img-circle img-item"), @item %>
        <% end %>
      	<h5><%= "#{@item.brand}, #{@item.name}" %></h5>
        <h6><%= "Department: #{@item.item_category.name}" %></h6>
        <h6>$<%= @item.price %></h6>
        <p><%= @item.desc %></p>
    <h6 class="small">
      <% if current_user.liaison? %>
        <%= link_to "edit", edit_item_path(@item) %>
      <% end %>
      <%= link_to "BACK", :back %>
    </h6>
  </div>
</div>
