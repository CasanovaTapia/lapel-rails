	<h3 >Add Items</h3>
	<% @items.each do |item| %>
		<div class="item col-md-3">
			<div class="item-inlay">
			<%= image_tag('box.png', class: "img-circle img-item") %><br/>
			<p><%= item.name %></p>
			<%= form_for [@user, @order, @order.order_items.build(:item => item)] do |f| %>
				<div class="form-group">
					<%= f.hidden_field :item_id %>
				</div>
				<div class="form-group">
					<%= f.label :qty %>
					<%= f.text_field :quantity, :size=>"3" %>
					<%= f.submit 'ADD', class: 'item-btn' %>
				</div>
			<% end %>
			</div>
		</div>
	<% end %>
