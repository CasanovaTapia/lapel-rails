	<h3 >Add Items</h3>
	<% @items.each do |item| %>
		<div class="item col-md-3">
			<div class="item-inlay row">
				<div class="col-md-4">
					<%= image_tag('box.png', class: "img-circle img-item") %>
				</div>

				<div class="col-md-8">
					<p><%= item.name %></p>
				</div>

				<div class="col-md-12">
					<%= form_for [@user, @order, @order.order_items.build(:item => item)] do |f| %>
						<div class="form-group">
							<%= f.hidden_field :item_id %>
						</div>
						<div class="form-group text-center">
							<%= f.label :qty %>
							<%= f.text_field :quantity, :size=>"3" %>
							<%= f.submit 'ADD', class: 'item-btn', id: 'add-submit' %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	<% end %>
