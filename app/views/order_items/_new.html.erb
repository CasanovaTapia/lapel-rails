	<h3 class="text-center">Add Items</h3>
	<% @items.each do |item| %>
		<div class="item col-md-4">
			<div class="item-inlay row">
				<div class="col-md-5">
					<% if item.avatar? %>
							<%= image_tag( item.avatar.url, class: "img-item" ) %>
					<% else %>
							<%= image_tag('box.png', class: "img-circle img-item") %>
					<% end %>
				</div>

				<div class="col-md-7">
					<p><%= item.brand %></p>
					<p class="small"><%= item.name %></p>
					<%= form_for [@user, @order, @order.order_items.build(:item => item)] do |f| %>
						<div class="form-group">
							<%= f.hidden_field :item_id %>
						</div>
						<div class="form-group">
							<%= f.label :qty %>
							<%= f.text_field :quantity, :size=>"2" %>
							<%= f.submit 'ADD', class: 'item-btn', id: 'add-submit' %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	<% end %>
