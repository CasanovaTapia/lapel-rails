<% unless order_item.id.nil? %>
	<div class="item col-md-4 text-center">
		<%= image_tag('box.png', class: "img-circle img-item") %><br/>
		<%= order_item.quantity %>
		<%= order_item.item.name %>
		<%= order_item.item.desc %>
		<%= "$#{order_item.item.price}" %>
		<% unless order_item.order.order_status_id == 3 || order_item.order.order_status_id == 4 %>
		 	<h5><%= link_to "remove", [order_item.order.user, order_item.order, order_item], :method => :delete, data: {confirm: "Are you sure you want to remove this item?"} %></h5>
		<% end %>
	</div>
<% end %>
