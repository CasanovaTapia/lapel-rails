<h2 class="text-center">Edit Order</h2>
<div class="container">
  <div class="row">
    <%= form_for [@user, @order] do |f| %>
      <div class="col-md-4 col-md-offset-4">
        <div class="form-group">
          <%= f.text_field :delivery, placeholder: 'Delivery address', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_area :notes, placeholder: 'Additional notes', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_area :status, placeholder: 'Status', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Send", class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
