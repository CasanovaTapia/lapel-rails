<h2 class="text-center">Create an Order</h2>
<div class="container">
  <div class="row">
    <%= form_for [@user, @user.orders.build] do |f| %>
      <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
          <%= f.text_field :delivery, placeholder: 'Delivery address', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_area :notes, placeholder: 'Additional notes', class: 'form-control' %>
        </div>

        <% if @order.order_items.size == 0 %>
          <p> There are no items in your order.</p>
        <% else %>
          <% @order_items.each do |oi| %>
            <%= render 'cart' %>
          <% end %>
        <% end %>

        <div class="form-group">
          <%= f.submit "Start Order", class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
