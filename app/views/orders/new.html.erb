<div class="row">
   <% if current_user.client? %>
     <%= render "client/navbar" %>
    <% elsif current_user.liaison? %>
    <div class="sidebar">
       <%= render "internal/internalside" %>
    </div>
   <% end %>
   <div class="client-content">
     <h2 class="text-center">NEW ORDER</h2>
     <div class="container">
       <div class="row">
         <%= form_for [@user, @user.orders.build] do |f| %>
           <div class="col-md-6 col-md-offset-3">
             <div class="form-group">
               <%= f.text_field :delivery, placeholder: 'Delivery address', class: 'form-control' %>
             </div>

             <div class="form-group">
               <%= f.text_area :notes, placeholder: 'Additional notes', class: 'form-control' %>
            </div>

             <div class="form-group">
               <%= f.submit "START ORDER", class: 'btn btn-success' %>
             </div>
           </div>
         <% end %>

         <h4><%= link_to "BACK", :back %></h4>
       </div>
     </div>
   </div>

</div>
