<% if current_user.client? %>
  <%= render "client/navbar" %>
<% end %>
<div class="text-center">
	<% if current_user.client? %>
		<% if @order.order_status.id == 1 %>
			<h5>What would you like to see in your next curation?</h5>
			<%= form_for [@order.user, @order] do |f| %>
				<div class="col-md-3">
					<%= image_tag('top.png') %><br/>
					<%= f.label :shirt %>
					<%= f.check_box :shirt %>
				</div>
				<div class="col-md-3">
					<%= image_tag('suit.svg') %><br/>
					<%= f.label :suit %>
					<%= f.check_box :suit %>
				</div>
				<div class="col-md-3">
					<%= image_tag('outerwear.png') %><br/>
					<%= f.label :outerwear %>
					<%= f.check_box :outerwear %>
				</div>
				<div class="col-md-3">
					<%= image_tag('pants.svg') %><br/>
					<%= f.label :pants %>
					<%= f.check_box :pants %>
				</div>
				<div class="col-md-3">
					<%= image_tag('shirt.png') %><br/>
					<%= f.label :basics %>
					<%= f.check_box :basics %>
				</div>
				<div class="col-md-3">
					<%= image_tag('footwear.png') %><br/>
					<%= f.label :footwear %>
					<%= f.check_box :footwear %>
				</div>
				<div class="col-md-3">
					<%= image_tag('tie.svg') %><br/>
					<%= f.label :accessories %>
					<%= f.check_box :accessories %>
				</div>
				<!-- <div class="col-md-3">
					<%= image_tag('underwear.png') %><br/>
					<%= f.label :underwear %>
					<%= f.check_box :underwear %>
				</div> -->
				<div>
          <%= f.text_area :notes, placeholder: 'Additional notes', class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.select :order_status_id, options_from_collection_for_select(OrderStatus.all, "id", "name") %>
				</div>
				<div class="form-group">
					<%= f.submit "Send", class: 'btn btn-success' %>
				</div>
			<% end %>

         <%= link_to "BACK", :back %>
 		<% elsif @order.order_status.id == 2 %>
			<h4><%= "Your curation has #{@order.items.size} items. Please approve or remove items for delivery." %></h4>
			<% if @order.items.size > 0 %>
				<% @order.order_items.each do |order_item| %>
					<%= render partial: 'cart', locals: { order_item: order_item } %>
				<% end %>
			<% else %>
				<p> THERE ARE NO ITEMS IN YOUR ORDER.</p>
			<% end %>
		<% elsif @order.order_status.id == 3 %>
			<h4><%= "You have reviewed this curation. Your liaison will contact you shortly." %></h4>
			<% if @order.items.size > 0 %>
					<% @order.order_items.each do |order_item| %>
						<%= render partial: 'cart', locals: { order_item: order_item } %>
					<% end %>
			<% else %>
				<p> THERE ARE NO ITEMS IN YOUR ORDER.</p>
			<% end %>
		<% else %>
			<p>This curation has been delivered.</p>
			<% @order.order_items.each do |order_item| %>
				<%= render partial: 'cart', locals: { order_item: order_item } %>
			<% end %>
		<% end %>

	<% else %>
		<h4><%= @order.user.name %></h4>
		<p><%= "Status: #{@order.order_status.name}, #{@order.updated_at.strftime("%m/%d/%y")}" %></p>
		<p><%= "Delivery: #{@order.delivery}" %></p>
		<p><%= "Notes: #{@order.notes}" %></p><br/>
		<h5><%= "Order has #{@order.items.size} items" %></h5>
		<div>
			<%= render 'itemlist' %>
		</div>

		<%= render partial: 'order_items/new', locals: { user: @user, order: @order } %>

		<%= link_to 'DELETE ORDER', [@order.user, @order], :method => :delete, :data => { :confirm => 'Are you sure?' } %>
	<% end %>
</div>
