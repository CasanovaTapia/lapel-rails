<h2 class="text-center">DASHBOARD</h2>
<div class="activity_list row">
   <div class="act_list col-md-3" id="requested">
      <h4>REQUESTED</h4>
      <% if @order_statuses.find(1).orders.length > 0 %>
         <% @order_statuses.find(1).orders.each do |order| %>
            <div class="order_box">
              <h4><%= order.user.name %></h4>
              <h5><%= order.created_at.strftime("%m/%d/%y") %></h5>
              <p><%= link_to "SEE MORE", [order.user, order], class: "plink" %></p>
            </div>
          <% end %>
      <% else %>
         <p>No requested orders</p>
      <% end %>
   </div>
   <div class="act_list col-md-3" id="processing">
      <h4>PROCESSED</h4>
