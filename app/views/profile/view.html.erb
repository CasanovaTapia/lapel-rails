<div class="sidebar col-md-2">
   <% if current_user.role == "liaison" %>
   <%= render "partials/internalside" %>
   <% elsif current_user.role == "client" %>
   <%= render "partials/clientside" %>
   <% else %>
   <h4>You're fat</h4>
   <% end %>
</div>

<div class="content col-md-10 col-md-offset-2">
   <div class="dashboard_activities">
      <% if current_user.role == "liaison" %>
         <%= render "partials/internaldashcontent" %>
      <% elsif current_user.role == "client" %>
         <%= render "partials/clientdashcontent" %>
      <% else %>
         <h2>You're fat.</h2>
      <% end %>
   </div>

   <div class="clientele">
      <h2 class="text-center">CLIENTELE</h2>
      <div class="client_list">
         <% if current_user.clients.length > 0 %>
            <% current_user.clients.each do |client| %>
               <div class="client">
                  <%= client.name %>
                  <%= client.email %>
               </div>
               <% end %>
         <% else %>
            <div class="client_negative text-center">
               <h3>YOU HAVE NO CLIENTS.</h3>
            </div>

            <div class="extra_prompts">
               <h4>GO SELL SOMETHING!</h4>
            </div>
         <% end %>
      </div>
   </div>

   <div class="inventory">
      <h2 class="text-center">INVENTORY</h2>
      <div class="item_list">
         <% if @items.length > 0 %>
            <% @items.each do |item| %>
               <div class="item col-md-3">
                  <h4><%= item.name %></h4>
                  <h5>$<%= item.price %></h5>
                  <h5>SEE MORE</h5>
                </div>
               <% end %>
         <% else %>
            <h3>There are no items currently in stock.</h3>
         <% end %>
      </div>

   </div>

</div>
